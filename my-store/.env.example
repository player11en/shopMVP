# Database Configuration for PostgreSQL (Plesk Production)
# Replace with your actual Plesk PostgreSQL credentials
DATABASE_URL=postgres://medusa_user:your_password@localhost:5432/medusa_db

# If your PostgreSQL is on a different host (check Plesk Connection Info):
# DATABASE_URL=postgres://medusa_user:your_password@postgres.heliohost.org:5432/medusa_db

# Server Configuration
PORT=9000
NODE_ENV=production

# CORS Configuration
# Replace with your actual domain
STORE_CORS=https://yourdomain.com,https://www.yourdomain.com
ADMIN_CORS=https://admin.yourdomain.com,https://yourdomain.com
AUTH_CORS=https://admin.yourdomain.com,https://yourdomain.com

# Security Keys (IMPORTANT: Generate strong random strings for production!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_here
COOKIE_SECRET=your_super_secret_cookie_key_here

# Stripe Configuration (add your production keys)
STRIPE_API_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
